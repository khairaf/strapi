{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "banners",
  "info": {
    "name": "banner"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "richtext"
    },
    "subtitle": {
      "type": "richtext"
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "image_position": {
      "type": "enumeration",
      "enum": [
        "right",
        "left"
      ]
    },
    "action": {
      "type": "component",
      "repeatable": true,
      "component": "banner.action"
    }
  }
}
